<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.cart.CartFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="VİVA"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/shopping"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="314dp"
        android:layout_height="474dp"
        android:layout_marginTop="84dp"
        android:background="@color/gray_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sipariş tutarını gösteren alan ve Siparişi Onayla düğmesi -->
    <!-- Sipariş tutarını gösteren alan ve Siparişi Onayla düğmesi -->
    <LinearLayout
        android:id="@+id/orderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView">

        <!-- Sipariş tutarını gösteren alan -->


        <!-- Siparişi Onayla düğmesi -->
        <TextView
            android:id="@+id/orderSummaryText"
            android:layout_width="150dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Toplam Tutar: $0.00"
            android:textSize="18sp" />

        <Button
            android:id="@+id/confirmOrderButton"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/remove_button_background"
            android:text="Siparişi Onayla"
            android:textColor="@color/gray_150"
            android:textSize="10sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
